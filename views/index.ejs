    <script>
        $('#show-more-blogs').on('click', function () {
            $('.blog-post:hidden').slice(0, 3).slideDown();
            if ($('.blog-post:hidden').length == 0) {
                $('#show-more-blogs').hide();
            }
        });
    
        $('.blog-post').on('click', function (e) {
            e.preventDefault(); // prevent default behavior of anchor tag
            var title = $(this).find('.blog-title').text();
            var content = $(this).data('content');
            var url = $(this).data('url'); // get the URL from the data attribute
            $('#newModal-title').text(title);
            $('#newModal-content').html(content);
            $('#myNewModal').modal('show');
            var blogUrl = window.location.origin + url;
            history.pushState(null, null, blogUrl); // modify the URL in the address bar
    
            document.getElementById("share-link-btn").addEventListener("click", function () {
                var link = blogUrl; // use the modified URL in the share link
                navigator.clipboard.writeText(link).then(function () {
                    alert("Link copied to clipboard!");
                }, function () {
                    alert("Failed to copy link to clipboard");
                });
            });
        });
    
        // handle back
    

    
    
    </script>

